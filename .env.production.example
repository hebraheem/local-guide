# Production Environment
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_HOST=your-db-host
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=change-in-production
DATABASE_NAME=app_db

# JWT - MUST be changed in production
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_SECRET_KEY_AT_LEAST_32_CHARACTERS
JWT_EXPIRATION=7d

# Security
BCRYPT_ROUNDS=12

# API
API_VERSION=v1
API_PREFIX=api

# CORS - Configure for production domain
CORS_ORIGIN=https://yourdomain.com

# Logging
LOG_LEVEL=info
